<%- include('partials/head') %>
</head>

<body class="bg-gradient-to-br from-amber-50 via-white to-amber-50 min-h-screen">
    
       <%- include('partials/nav') %>


    <main class="flex flex-col items-center justify-center flex-1 py-12 px-4">
        <!-- Hero Section -->
        <div class="text-center mb-8 max-w-2xl">
            <div class="mb-6">
                <div class="w-20 h-20 bg-gradient-to-r from-amber-500 to-amber-600 rounded-full flex items-center justify-center mx-auto mb-4 shadow-lg">
                    <i class="fas fa-home text-white text-3xl"></i>
                </div>
                <h1 class="text-4xl font-bold text-gray-800 mb-3">List Your Property</h1>
                <p class="text-lg text-gray-600 leading-relaxed">Join thousands of hosts who are earning extra income by sharing their space with travelers from around the world.</p>
            </div>
        </div>

        <!-- Form Card -->
        <div class="bg-white rounded-2xl shadow-xl p-8 w-full max-w-md transform hover:scale-105 transition-all duration-300">
            <div class="text-center mb-6">
                <h2 class="text-2xl font-bold text-gray-800 mb-2">Get Started</h2>
                <p class="text-gray-600">Tell us about your property</p>
            </div>
            
            <form action="/host/add-home" method="post" class="space-y-6">
                <div class="space-y-2">
                    <label for="houseName" class="block text-sm font-medium text-gray-700">
                        <i class="fas fa-home text-amber-600 mr-2"></i>
                        Property Name
                    </label>
                    <input 
                        type="text" 
                        id="houseName"
                        name="houseName"  
                        placeholder="Enter your property name"
                        required
                        class="w-full border-2 border-gray-200 rounded-xl px-4 py-3 focus:outline-none focus:ring-4 focus:ring-amber-100 focus:border-amber-500 transition-all duration-200 placeholder-gray-400"
                    >
                </div>
                
                <button 
                    type="submit"
                    class="w-full bg-gradient-to-r from-amber-500 to-amber-600 text-white font-semibold rounded-xl px-6 py-3 hover:from-amber-600 hover:to-amber-700 cursor-pointer transition-all duration-200 transform hover:scale-105 hover:shadow-lg flex items-center justify-center space-x-2"
                >
                    <i class="fas fa-rocket"></i>
                    <span>List My Property</span>
                </button>
            </form>
        </div>

        <!-- Features Section -->
        <div class="mt-12 grid grid-cols-1 md:grid-cols-3 gap-6 max-w-4xl">
            <div class="text-center p-6 bg-white/50 rounded-xl backdrop-blur">
                <div class="w-12 h-12 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
                    <i class="fas fa-dollar-sign text-green-600 text-xl"></i>
                </div>
                <h3 class="font-semibold text-gray-800 mb-2">Earn Money</h3>
                <p class="text-sm text-gray-600">Turn your extra space into extra income</p>
            </div>
            
            <div class="text-center p-6 bg-white/50 rounded-xl backdrop-blur">
                <div class="w-12 h-12 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-4">
                    <i class="fas fa-users text-blue-600 text-xl"></i>
                </div>
                <h3 class="font-semibold text-gray-800 mb-2">Meet People</h3>
                <p class="text-sm text-gray-600">Connect with travelers from around the world</p>
            </div>
            
            <div class="text-center p-6 bg-white/50 rounded-xl backdrop-blur">
                <div class="w-12 h-12 bg-purple-100 rounded-full flex items-center justify-center mx-auto mb-4">
                    <i class="fas fa-shield-alt text-purple-600 text-xl"></i>
                </div>
                <h3 class="font-semibold text-gray-800 mb-2">Stay Protected</h3>
                <p class="text-sm text-gray-600">We've got your back with our protection program</p>
            </div>
        </div>

        <!-- Thank You Message -->
        <div class="text-center mt-8">
            <p class="text-gray-500 text-sm flex items-center justify-center space-x-2">
                <i class="fas fa-heart text-red-400"></i>
                <span>Thank you for joining our community of amazing hosts!</span>
            </p>
        </div>
    </main>
</body>

</html>
